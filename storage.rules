rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Медиа тренеров: чтение публичное, запись только владельцем (uid === userId в пути)
    match /coach-media/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
