rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Медиа тренеров: чтение публичное
    // Запись: при auth проверяем uid; без auth временно разрешено (для MVP без бэкенда)
    match /coach-media/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth == null || request.auth.uid == userId;
    }
    // Фото тренеров клуба (админ загружает от имени клуба)
    match /coach-media/club/{adminUserId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == adminUserId;
    }
  }
}
